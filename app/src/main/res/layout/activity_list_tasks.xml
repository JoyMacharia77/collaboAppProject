<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_bgd2"
    tools:context=".ListTasksActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/myTasks"
            android:layout_toStartOf="@id/myTasks"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="90dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_home_white"
            android:layout_marginEnd="90dp"
            android:onClick="redirectHome"/>
    <TextView
        android:id="@+id/myTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_tasks"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:fontFamily="@font/alloyink"
        android:textColor="@color/my_white"
        />
    <ListView
        android:id="@+id/listView"
        android:layout_below="@id/myTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            />
    </RelativeLayout>
</LinearLayout>